#include <botaoLed.h>

#define BOTAO           PIN_B0  // botão pedestre (ativo em 0)


int1 botao_pressionado() {
   if (!input(BOTAO)) {
      delay_ms(20);
      if (!input(BOTAO)) {
         while (!input(BOTAO)) { delay_ms(10); }
         return TRUE;
      }
   }
   return FALSE;
}

void main()
{

   while(TRUE)
   {
       if (botao_pressionado())
       {
         output_low(PIN_B1);
         delay_ms(20);
         output_low(PIN_B2);
         delay_ms(20);
         output_low(PIN_B3);
         delay_ms(20);
         output_low(PIN_B4);
         output_low(PIN_B5);
         delay_ms(20);
         output_low(PIN_B6);
         output_low(PIN_B7);
         output_high(PIN_B1);
         delay_ms(3000);
         output_high(PIN_B6);
       }

   }
}
