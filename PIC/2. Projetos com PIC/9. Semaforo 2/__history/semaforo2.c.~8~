#include <16F877A.h>
#device ADC=16

#FUSES NOWDT                    //No Watch Dog Timer
#FUSES NOBROWNOUT               //No brownout reset
#FUSES NOLVP                    //No low voltage prgming, B3(PIC16) or B5(PIC18) used for I/O

#use delay(crystal=20000000)

#define LED PIN_None
#define DELAY 1000


signed int8 flag=1;

byte const unidade[11]={
   0a11111110, //0
   0a00111000, //1
   0a11011101, //2
   0a01111101, //3
   0a00111011, //4
   0a01110111, //5
   0a11110111, //6
   0a00111100, //7
   0a11111111, //8
   0a01111111 //9
};

byte const dezena[11]={
   0b11101110, //0
   0b00101000, //1
   0b11001101, //2
   0b01101101, //3
   0b00101011, //4
   0b01100111, //5
   0b11100111, //6
   0b00101100, //7
   0b11101111, //8
   0b01101111 //9
};


int teste(){
   unsigned int i=0,tempo,cont = 25;
   for(tempo=0;tempo<100;tempo++){
         i = cont/10;
         output_b(dezena[i]);
         delay_ms(5);
         i = cont%10;
         output_b(unidade[i]);
         delay_ms(5);
      }
      cont=cont+flag;
      if(cont>=60 || cont<=25){
         flag=flag*(-1);
      }
}


void main()
{

   //Example blinking LED program
   while(true)
   {
      teste();  
      output_low(pin_a5);
      delay_ms(DELAY);
      output_high(pin_a5);
      delay_ms(DELAY);
   }

}
